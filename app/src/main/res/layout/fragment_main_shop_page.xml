<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Shop.MainShopPage"
    android:id="@+id/mainShopFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="שלום וברוכים הבאים לחנות של האפליקציה. כאן תוכל למצוא מגוון של אימונים שונים בהתאם לצרכים שלך כל תוכנית עולה 35 מטבעות."
            android:textSize="20dp"
            />

        <Button
            android:layout_below="@+id/mainText"
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/fix_button"
            android:text="תוכנית אימון בבית" />

        <Button
            android:id="@+id/home_gym"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/home"
            android:layout_marginTop="20dp"
            android:background="@drawable/fix_button"
            android:text="תוכנית אימון בבית ובמכון" />

        <Button
            android:id="@+id/gym"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/home_gym"
            android:layout_marginTop="20dp"
            android:background="@drawable/fix_button"
            android:text="תוכנית אימון רק למכון" />

    </RelativeLayout>

</FrameLayout>