                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="2.  שכיבות סמיכה פייק: 3 סטים, 12 חזרות בכל סט." />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="3. עמידת ידיים בעזרת קיר: 3 סטים, 10 פעמים בכל סט." />

                <!-- המשך רשימת התרגילים ליום 2 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
